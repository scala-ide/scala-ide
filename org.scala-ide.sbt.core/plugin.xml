<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="remoteBuilder"
         name="Remote sbt Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="false">
         <run
               class="org.scalaide.sbt.core.builder.RemoteBuilder">
         </run></builder>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.scalaide.sbt.core.InstallRemoteSbtBuilderHandler"
            id="org.scala-ide.sbt.core.installRemoteSbtBuilder"
            name="Install Remote sbt Builder">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="org.scala-ide.sbt.core.installRemoteSbtBuilder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <and>
                        <adapt
                              type="org.eclipse.core.resources.IProject">
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="org.scala-ide.sdt.core.scalanature">
                           </test>
                        </adapt>
                     </and>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.importWizards">
      <category
            id="org.scalaide.sbt.core.importCategory"
            name="Sbt">
      </category>
      <wizard
            category="org.scalaide.sbt.core.importCategory"
            class="org.scalaide.sbt.ui.wizard.ProjectBuildImportWizard"
            icon="icons/sample.gif"
            id="org.scalaide.sbt.ui.wizards.ImportSbtBuild"
            name="Import Sbt Build">
         <description>
            Import projects from an sbt build into the workspace
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.scalaide.ui.internal.editor.sbt.SbtEditor"
            default="false"
            filenames="*.sbt"
            id="org.scalaide.sbt.core.editor.SbtEditor"
            name="Sbt file editor"
            symbolicFontName="org.eclipse.jdt.ui.editors.textfont">
      </editor>
   </extension>
   <extension
         point="org.scala-ide.sdt.core.sourcefileprovider">
      <provider
            class="org.scalaide.ui.internal.editor.sbt.SbtSourceFileProvider"
            file_extension="sbt">
      </provider>
   </extension>
   <extension
         point="org.eclipse.core.filebuffers.documentSetup">
      <participant
            class="org.scalaide.ui.internal.editor.sbt.SbtDocumentSetupParticipant"
            extensions="sbt">
      </participant>
   </extension>
   <extension
         point="org.scala-ide.sdt.core.buildManagerFactory">
      <buildManagerFactory
            class="org.scalaide.sbt.core.builder.RemoteBuildManagerFactory"
            name="remoteBuildManagerFactory">
      </buildManagerFactory>
   </extension>

</plugin>
